
<table class="table table-responsive table-bordered table-dark" id="table_format" width="100%" cellspacing="0">
  <thead>
  <tr>
    <th>Name </th>
    <th>Email </th>
    <th>Role </th>

    <th>Created at </th>
    <th>Updated at </th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% paginate.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>

      <td><%= user.created_at %></td>
      <td><%= user.updated_at %></td>
      <td><%= link_to '', user ,class:"fas fa-tv fa-2x  btn-success btn-lg"%></td>
      <td><%= link_to '', edit_user_path(user),class:"fas fa-edit fa-2x btn-warning btn-lg" %></td>
        <td><%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?' } ,class:"fas fa-trash fa-2x btn-danger btn-lg"%></td>
    </tr>

  <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-sm-6">
    <div  id="dataTables-example_info" role="status" aria-live="polite">
      <span>Affichage  <%=paginate.length%> de <%= @total%> entrées</span>
    </div>
  </div>

      <%= will_paginate paginate, renderer: WillPaginate::ActionView::BootstrapLinkRenderer , inner_window: 1 , previous_label: "Précédent", next_label: "Suivant"%>

</div>



<script>
    $(document).on('turbolinks:page.visit', $('#table_format').ddTableFilter() );
</script>


