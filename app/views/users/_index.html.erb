
<table class="table table-responsive table-bordered table sortable">
  <thead>
  <tr>
    <th>Name </th>
    <th>Email </th>
    <th>Role </th>
    <th>Created at </th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% paginate.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td><%= user.created_at %></td>
      <td><%= link_to 'Show', user ,class:"btn btn-md btn-success"%></td>
      <td><%= link_to 'Edit', edit_user_path(user),class:"btn btn-md btn-primary" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-md btn-danger"%></td>
    </tr>

  <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-sm-6">
    <div  id="dataTables-example_info" role="status" aria-live="polite">
      <span>Affichage  <%=paginate.length%> de <%= @total%> entrées</span>
    </div>
  </div>

      <%= will_paginate paginate, renderer: WillPaginate::ActionView::BootstrapLinkRenderer , inner_window: 1 , previous_label: "Précédent", next_label: "Suivant"%>

</div>



