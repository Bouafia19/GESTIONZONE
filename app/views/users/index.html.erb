<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Utilisateurs</h1>
<p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Utilisateurs</h6>
  </div>
  <div class="card-body">

    <table class="table table-bordered table-responsive" id="dataTable" width="100%" cellspacing="0">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Created at</th>
        <th>Updated at</th>


        <th></th>
        <th></th>
        <th></th>


      </tr>
      </thead>
      <tbody>
      <% @userz.each do |user| %>
        <tr>

          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= user.created_at %></td>
          <td><%= user.updated_at %></td>

          <td><%= link_to '', user ,class:"fas fa-tv fa-2x  btn-success btn-lg"%></td>
          <td><%= link_to '', edit_user_path(user) ,class:"fas fa-edit fa-2x btn-warning btn-lg"%></td>
          <td><%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?' },class:"fas fa-trash fa-2x btn-danger btn-lg" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>





