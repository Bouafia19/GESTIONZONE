<div class="col-xl-12 col-md-6 mb-4 res">
  <div class="card border-success shadow h-100 py-2">
    <div class="card-body">
      <div class="row no-gutters align-items-center">
        <div class="col mr-2">

          <%= form_tag investisseurs_search_path, method: :get do %>
            <div class="row">
              <div class="col-sm-2 align-self-start"  >
                <%= select_tag :site ,options_for_select([["Zone Industrielles","ZI"],["Hors Zones","HZ"],["Zone Activite","ZAC"],["Promotion Immobiliere","PI"],["Zone Entrepot Activites","ZEA"]] ),{prompt: "Select Type Zones",class:"form-control", required: true}%>
                <%#= select_tag :site, options_for_select(Zone.all.map{|u| [u.type_zone ] }.uniq),{prompt: "Zones",class:"form-control", required: true} %>

              </div>

              <div class="col-sm-2 align-self-center">
                <%#= text_field_tag :raison_sociale_francais, params[:raison_sociale_francais],{placeholder:"Nom Investisseur",class:"form-control"} %>
                <%= select_tag :secteur_activite, options_for_select(Investisseur.all.map{|u| [u.secteur_activite ] }.uniq),{prompt: "Secteur Activite",class:"form-control", required: true} %>

              </div>

              <div class="col-sm-2 align-self-center">
                <%#= text_field_tag :commune, params[:commune] ,{placeholder:"Commune",class:"form-control"} %>
                <%#= select_tag :commune,options_for_select([["AIN LAHDJAR","AIN LAHDJAR"],["GUELLEL","GUELLEL"],["GUEDJEL","GUEDJEL"],["TACHOUDA","TACHOUDA"],["EL HAMMA","EL HAMMA"],["AIN LAHDJAR","AIN LAHDJAR"],["AIN ABASSA","AIN ABASSA"],["AIN ARNET","AIN ARNET"]]),{prompt: "Commune",class:"form-control", required: true} %>
                <%= select_tag :commune, options_for_select(Investisseur.all.map{|u| [u.commune ] }.uniq),{prompt: "Commune",class:"form-control", required: true} %>

              </div>
              <div class="col-sm-2 align-self-start"  >
                <%= select_tag :montant_investissement ,options_for_select(Investisseur.all.map{|u| [u.montant_investissement ]}.uniq),{prompt: "M investissement superieur a ",class:"form-control",required: true}%>
                <%#= select_tag :site, options_for_select(Zone.all.map{|u| [u.type_zone ] }.uniq),{prompt: "Zones",class:"form-control", required: true} %>
                <%#= select_tag :montant_investissement ,options_for_select([["100 000",100000],["500 000",500000],["1 000 000",1000000],["5 000 000",5000000],["10 000 000",10000000]] ),{prompt: "montant investissement > a",class:"form-control", required: true}%>

              </div>
              <div class="col-sm-2 align-self-end">
                <%= submit_tag "Chercher Investisseurs ",class:"btn btn-md btn-success" %>
              </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<hr>

  <strong style="color: #5C9917">Resultat trouve <%=  @investisseurs.count   %> , Pour Site : <%=  params[:site]%> , Secteur D'activite : <%=  params[:secteur_activite]%> , Commune : <%=  params[:commune]%> , Montant D'investissement Superieur a : <%=  params[:montant_investissement]%></strong>

 <hr>
      <div class="col-xl-12 col-md-6 mb-4 res">
        <div class="card border-info shadow h-100 py-2">
          <div class="card-body">
            <div class="row no-gutters align-items-center">
              <div class="col mr-2">

                <%= form_tag investisseurs_search_path, method: :get do %>
                  <div class="row">
                    <div class="col-sm-2 align-self-start"  >
                      <%= select_tag :nom_zone ,options_for_select([["ZI Ancienne","ZI ANCIENNE"],["ZI Extension","ZI EXTENSION"],["Ouled Saber","OULED SABER"],["ZI El Eulma","ZI EL EULMA"]] ),{prompt: "Zones",class:"form-control", required: true}%>
                      <%#= select_tag :nom_zone, options_for_select(Lot.all.map{|u| [u.nom_zone ] }.uniq),{prompt: "Zones",class:"form-control", required: true} %>

                    </div>

                    <div class="col-sm-2 align-self-center">
                      <%#= text_field_tag :raison_sociale_francais, params[:raison_sociale_francais],{placeholder:"Nom Investisseur",class:"form-control"} %>
                      <%= select_tag :class_activite, options_for_select(Lot.all.map{|u| [u.class_activite ] }.uniq),{prompt: "Class Activite",class:"form-control", required: true} %>

                    </div>

                    <div class="col-sm-2 align-self-center">
                      <%#= text_field_tag :commune, params[:commune] ,{placeholder:"Commune",class:"form-control"} %>
                      <%#= select_tag :commune,options_for_select([["AIN LAHDJAR","AIN LAHDJAR"],["GUELLEL","GUELLEL"],["GUEDJEL","GUEDJEL"],["TACHOUDA","TACHOUDA"],["EL HAMMA","EL HAMMA"],["AIN LAHDJAR","AIN LAHDJAR"],["AIN ABASSA","AIN ABASSA"],["AIN ARNET","AIN ARNET"]]),{prompt: "Commune",class:"form-control", required: true} %>
                      <%= select_tag :type_lot, options_for_select(Lot.all.map{|u| [u.type_lot ] }.uniq),{prompt: "Type Lot",include_blank: 'None Specified',class:"form-control"} %>

                    </div>
                    <div class="col-sm-2 align-self-start"  >
                      <%= select_tag :superficie ,options_for_select(Lot.all.map{|u| [u.superficie ]}.uniq),{prompt: "Superficie superieur a ",class:"form-control",required: true}%>
