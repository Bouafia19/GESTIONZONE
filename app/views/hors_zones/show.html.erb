              <table class="table table-responsive table-striped table-hover table sortable">
                <thead>

                </thead>
                <tbody>
                <tr>
                  <th>Code </th>
                  <td><%= @hors_zone.code_zone %></td>
                </tr>

                <tr>
                  <th>Type </th>
                  <td><%= @hors_zone.type_zone %></td>
                </tr>

                <tr>
                  <th>Nom </th>
                  <td><%= @hors_zone.nom_zone %></td>
                </tr>

                <tr>
                  <th>Commune</th>
                  <td><%= @hors_zone.commune %></td>
                </tr>

                <tr>
                  <th>Wilaya</th>
                  <td><%= @hors_zone.wilaya %></td>
                </tr>
                <tr>
                  <th>Num arrete </th>
                  <td><%= @hors_zone.num_arrete_creation %></td>
                </tr>

                <tr>
                  <th>Dat arrete </th>
                  <td><%= @hors_zone.dat_arrete_creation %></td>
                </tr>
                <tr>
                  <th>Superf total</th>
                  <td><%= @hors_zone.superf_total %></td>
                </tr>


