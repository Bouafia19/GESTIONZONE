

  <div class="card">

    <div class="card-body">

      <h1>Hors Zones: <%= @hors_zone.nom_zone %></h1>
<hr>
      <% if can? :update, @user %>
    <%= link_to 'Mise A Jour', edit_hors_zone_path(@hors_zone) ,class:"btn btn-md btn-primary"%> |
        <%end %>
      <%= link_to 'Retour', hors_zones_path ,class:"btn btn-md btn-warning"%>
