<table class="table table-responsive table-striped table-hover table sortable">
  <thead>
  <tr>
    <th colspan="3"></th>
    <th>Code zone</th>
    <th>Type zone</th>
    <th>Nom zone</th>
    <th>Commune</th>
    <th>Wilaya</th>
    <th>Num arrete creation</th>
    <th>Dat arrete creation</th>
    <th>Superf total</th>
    <th>Superf cessible</th>
    <th>Superf vrd</th>
    <th>Nbr lots</th>
    <th>Nbr lot attribues</th>
    <th>Nbr lot cession</th>
    <th>Nbr lot concession</th>
    <th>Observation</th>

  </tr>
  </thead>

  <tbody>
  <% paginate.each do |zone_activite| %>
    <tr>
      <td><%= link_to 'Show', zone_activite ,class:"btn btn-success"%></td>
      <td><%= link_to 'Edit', edit_zone_activite_path(zone_activite) ,class:"btn btn-primary"%></td>
      <td><%= link_to 'Destroy', zone_activite, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      <td><%= zone_activite.code_zone %></td>
      <td><%= zone_activite.type_zone %></td>
      <td><%= zone_activite.nom_zone %></td>
      <td><%= zone_activite.commune %></td>
      <td><%= zone_activite.wilaya %></td>
      <td><%= zone_activite.num_arrete_creation %></td>
      <td><%= zone_activite.dat_arrete_creation %></td>
      <td><%= zone_activite.superf_total %></td>
      <td><%= zone_activite.superf_cessible %></td>
      <td><%= zone_activite.superf_vrd %></td>
      <td><%= zone_activite.nbr_lots %></td>
      <td><%= zone_activite.nbr_lot_attribues %></td>
      <td><%= zone_activite.nbr_lot_cession %></td>
      <td><%= zone_activite.nbr_lot_concession %></td>
      <td><%= zone_activite.observation %></td>

    </tr>
  <% end %>
  </tbody>
</table>
