
 <div class="card">
        <div class="card-body">
          <div class="card-header">
           <h1 align="center">LOTS</h1>
          </div>
          <hr>


<% link_to 'New Lot', new_lot_path ,class:"btn btn-success"%>
          <% link_to 'Pdf', lots_path(format: :pdf) ,class:"btn btn-md btn-success "%>
          <% link_to 'Excel', lots_path(format: :xlsx) ,class:"btn btn-md btn-success "%>

          <%#= link_to 'Pdf', '#' ,class:"btn btn-md btn-success "%>



          <div class="panel-body">
              <div class="row">
                <div class="col-sm-12">

                  <div class="panel-body">
                    <div class="row">
                      <div class="col-sm-9">

                        <div class="dataTables_length input-group" id="example_length">
                          <div class="col-sm-2">
                            <span>Voir</span>
                          </div>

                          <div class="col-sm-6" style="margin-left: 10px">
                            <%= select_tag(:count,options_for_select([10,25,50], selected: session[:per_pages]),class:"form-control input-sm", onchange:"SelectSearch(id,'lots','')", id:"select" )%>
                          </div>
                          <span>entr√©es</span>
                        </div>
                      </div>
                      <div class="col-sm-3">
                        <div id="example_filter" class="dataTables_filter">
                          <%= search_field_tag "search_champ",session[:data] ,{class:"form-control input-sm",placeholder:"Chercher",onKeyUp:"SelectSearch(id,'lots','')" }%>
                        </div>
                      </div>
                    </div>
                    <hr>
                    <div class="row" id="table_search" style="padding: 10px">
                      <%= render(:partial => 'index', locals: {paginate: @paginate})%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>








