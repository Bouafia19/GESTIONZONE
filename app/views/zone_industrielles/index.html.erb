      </tr>
      </thead>
      <tbody>
      <% @zone_industriellez.each do |zone_industrielle| %>
        <tr>

          <td><%= zone_industrielle.code_zone %></td>
          <td><%= zone_industrielle.type_zone %></td>
          <td><%= zone_industrielle.nom_zone %></td>
          <td><%= zone_industrielle.commune %></td>
          <td><%= zone_industrielle.wilaya %></td>
          <td><%= zone_industrielle.superf_total %></td>
          <td><%= zone_industrielle.superf_cessible %></td>
          <td><%= zone_industrielle.superf_vrd %></td>
          <td><%= zone_industrielle.nbr_lots %></td>
          <td><%= zone_industrielle.nbr_lot_attribues %></td>
          <td><%= zone_industrielle.observation %></td>

          <td><%= link_to '', zone_industrielle ,class:"fas fa-tv fa-2x  btn-success btn-lg"%></td>
