  <div class="card-body">

    <table class="table table-bordered table-responsive" id="dataTable" width="100%" cellspacing="0">
      <thead>
      <tr>
        <th>Code zone</th>
        <th>Type zone</th>
        <th>Nom zone</th>
        <th>Commune</th>
        <th>Wilaya</th>
        <th>Superf total</th>
        <th>Superf cessible</th>
