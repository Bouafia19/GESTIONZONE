<!DOCTYPE html>
<html>
  <head>
    <title>GESTIONZONE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

  </head>

  <body>




  <nav class="navbar navbar-expand-lg bg-dark navbar-dark">

    <div class="container">
        <% if user_signed_in? %>

          <ul class="navbar-nav">

            <li class="nav-item active">
              <a class="nav-link" href="<%= root_path %>">Welcome</a>
            </li>
            <li class="nav-item">
              <%= link_to 'INVESTISSEURS', investisseurs_path ,class:"nav-link"%>
            </li>


            <div class="dropdown show">
              <a class="btn btn-secondary dropdown-toggle" href="https://example.com" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                ZONES
              </a>

              <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <%= link_to 'ZONES', zones_path ,class:"dropdown-item"%>
                <%= link_to 'ZONES INDUSTRIELLES', zone_industrielles_path ,class:"dropdown-item"%>
                <%= link_to 'HORS ZONES', hors_zones_path ,class:"dropdown-item"%>
                <%= link_to 'PROMOTIONS IMOBILIERES', promotion_immobilieres_path ,class:"dropdown-item"%>
                <%= link_to 'ZONES ACTIVITES', zone_activites_path ,class:"dropdown-item"%>

              </div>
            </div>

            <li class="nav-item">
              <%= link_to 'LOTS', lots_path ,class:"nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to 'UTILISATEURS', users_path ,class:"nav-link"%>
            </li>

            <li class="nav-item ml-auto">
              <%= link_to "Logout", destroy_user_session_path, method: :delete ,class:"btn btn-danger btn-mn nav-link" %>
            </li>




        <% else %>


          <li class="nav-item pull-right">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">
               <i class="far fa-user"></i>
            </button>
          </li>

        <% end %>
      </ul>

    </div>
  </nav>
<br>





      <% if notice %>
      <div class="col-md-12 alert alert-info">
        <p id="notice"><%= notice %></p>

      </div>
      <br>
    <%end%>
    <% if alert %>
      <div class="col-md-12 alert alert-danger">
        <p id="alert"><%= alert %></p>
      </div>
      <br>
    <%end%>
    <div class="col-sm-12">
    <%= yield %>

  </div>


  </body>
</html>
