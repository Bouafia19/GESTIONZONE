<div class="card">
  <div class="card-body">
    <div class="card-header">
      <h1 align="center">PROMOTIONS IMMOBILIERES : <%= @total%></h1>

    </div>


<hr>
    <% link_to 'New Promotion Immobiliere', new_promotion_immobiliere_path ,class:"btn btn-success"%>
<br>
    <div class="col-xl-12 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
<%= form_tag '/promotion_immobilieres', method: :get do %>
  <div class="row">
    <div class="col-sm-2 align-self-start"  >
      <strong >Debut </strong><%= text_field_tag :start_date, session[:start_pub] , class: 'datepicker form-control date', 'data-date-format'=>"dd/mm/yyyy", required: true  %>
    </div>

    <div class="col-sm-2 align-self-center"  >
      <strong>Fin</strong><%= text_field_tag :end_date, session[:end_pub] , class: 'datepicker form-control date', 'data-date-format'=>"dd/mm/yyyy", required: true %>
    </div>


    <div class="col-sm-2 align-self-end">
      <%= submit_tag 'Filter Date Arrete Creation' ,class: 'btn btn-primary '%>
    </div>

<%end%>

    <div class="col-sm-1 align-self-end">
        <%= select_tag(:count,options_for_select([10,25,50], selected: session[:per_pages]),class:"form-control input-sm", onchange:"SelectSearch(id,'promotion_immobilieres','')", id:"select" )%>
    </div>

    <div class="col-sm-3 align-self-end">
        <%= search_field_tag "search_champ",session[:data] ,{class:"form-control input-sm",placeholder:"Chercher",onKeyUp:"SelectSearch(id,'promotion_immobilieres','')" }%>
    </div>
</div>

            </div>
          </div>
        </div>
      </div>
    </div>
<br>


    <div class="row" id="table_search" style="padding: 10px">
      <%= render(:partial => 'index', locals: {paginate: @paginate})%>
    </div>


  </div>
</div>


<script>
    $('.datepicker').datepicker()
</script>